<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.downloadcoroutines.modelClasses.SpecialistsModel" />

        <variable
            name="itemClickListener"
            type="com.example.downloadcoroutines.adapters.GenericAdapter.OnItemClickListener" />

        <variable
            name="index"
            type="Integer" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="#123456"
        android:onClick="@{(view)-> itemClickListener.onItemClick(view,index,model)}"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.author}"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:src="@{model.download_url}" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
